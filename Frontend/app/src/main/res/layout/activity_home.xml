<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/homepage_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="14dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyckerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_contstraintBottom_toBottomOf="parent"
        app:layout_contstraintLeft_toLeftOf="parent"
        app:layout_contstraintRight_toRightOf="parent"
        app:layout_contstraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>