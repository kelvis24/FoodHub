<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.foodhub"
    android:installLocation="preferExternal">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.example.foodhub.app.AppController"
        android:usesCleartextTraffic="true"

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodHub">
        <activity
            android:name=".Customer.Home.CompanyPage"
            android:exported="true" />
        <activity
            android:name=".Customer.Account.EditCustomerAccount"
            android:exported="true" />
        <activity
            android:name=".Customer.Home.FoodItemPage"
            android:exported="true" />
        <activity
            android:name=".Firm.FirmHomeActivity"
            android:exported="true" />
        <activity
            android:name=".Login.SignUpActivity"
            android:exported="true" />
        <activity
            android:name=".Admin.AdminHome.AdminHomeActivity"
            android:exported="true" />
        <activity
            android:name=".Customer.Home.HomeActivity"
            android:exported="true" />
        <activity
            android:name=".Firm.FirmMenuItemActivity"
            android:exported="true" />
        <activity
            android:name=".Login.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".Login.InitialActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>